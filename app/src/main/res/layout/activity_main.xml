<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bluebg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">
            <ImageView
                android:id="@+id/img1"
                android:src="@drawable/buku"
                android:layout_margin="12dp"
                android:layout_width="60sp"
                android:layout_height="50sp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nameApp"
            android:layout_toRightOf="@id/card1"
            android:text="Aplikasi Belajar \nAdministrasi Infrastruktur Jaringan\nKelas XII | TKJ \nSemester 1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="50dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginVertical="20sp"
                android:orientation="horizontal"
                android:paddingHorizontal="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSilabus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp">
                        <ImageView
                            android:id="@+id/silabus"
                            android:src="@drawable/silabus"
                            android:layout_gravity="center"
                            android:layout_margin="12dp"
                            android:layout_width="75dp"
                            android:layout_height="75dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txtSilabus"
                        android:text="Silabus"
                        android:layout_below="@id/cardSilabus"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardrpp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp">
                        <ImageView
                            android:id="@+id/rpp"
                            android:src="@drawable/docs"
                            android:layout_gravity="center"
                            android:layout_margin="12dp"
                            android:layout_width="75dp"
                            android:layout_height="75dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txtrpp"
                        android:text="RPP"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_below="@id/cardrpp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardmateri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp">
                        <ImageView
                            android:id="@+id/materi"
                            android:src="@drawable/laptop"
                            android:layout_gravity="center"
                            android:layout_margin="12dp"
                            android:layout_width="75dp"
                            android:layout_height="75dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txtMateri"
                        android:text="Materi"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_below="@id/cardmateri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="36dp"
                android:paddingVertical="24dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardVideo"
                        app:cardCornerRadius="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgVideo"
                            android:src="@drawable/play"
                            android:layout_margin="14dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txtVideo"
                        android:text="Video"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/cardVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSoal"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp">
                        <ImageView
                            android:id="@+id/imgSoal"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_margin="12dp"
                            android:src="@drawable/soal" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txtSoal"
                        android:text="Soal"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_below="@id/cardSoal"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            
            <LinearLayout
                android:paddingHorizontal="36dp"
                android:paddingVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardJobsheet"
                        app:cardCornerRadius="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/img"
                            android:src="@drawable/jobsheet"
                            android:layout_margin="12dp"
                            android:layout_width="75dp"
                            android:layout_height="75dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txtJobsheet"
                        android:text="Jobsheet"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_below="@id/cardJobsheet"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="12dp">
                        <ImageView
                            android:id="@+id/imgAbout"
                            android:src="@drawable/about"
                            android:layout_margin="12dp"
                            android:layout_width="75dp"
                            android:layout_height="75dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/txtAbout"
                        android:text="Tentang"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/cardAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>