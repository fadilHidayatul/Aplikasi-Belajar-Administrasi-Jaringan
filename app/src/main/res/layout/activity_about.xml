<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluebg"
    android:orientation="vertical"
    tools:context=".About.AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAbout"
        android:gravity="center"
        android:layout_marginVertical="-5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:src="@drawable/profile"
        android:layout_gravity="center_horizontal"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#FF000000"
        android:layout_marginVertical="36dp"
        android:cropToPadding="true"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="3dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/ln"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nama"
                    android:text="Siti Hartina"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="16076093"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lp"
                android:layout_below="@id/ln"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="6sp"
                    android:text="Pendidikan Teknik Informatika \nTeknik Elektronika \nFakultas Teknik \nUniversitas Negeri Padang"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/sm1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ig"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ig" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ig"
                        android:layout_centerHorizontal="true"
                        android:text="hartina_nst" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/fb"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/fb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fb"
                        android:layout_centerHorizontal="true"
                        android:text="Siti Hartina NST" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/wa"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/wa" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wa"
                        android:layout_centerHorizontal="true"
                        android:text="082288158361" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/tw"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/tw" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tw"
                        android:layout_centerHorizontal="true"
                        android:text="tina_28" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/sm1"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_marginStart="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/sc"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/sc"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:text="sitihartina28"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/sc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/em"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/gm"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:text="sitihartina375@gmail.com"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/em"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_marginEnd="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/gh"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/gh"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:text="sitihartina375"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/gh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>