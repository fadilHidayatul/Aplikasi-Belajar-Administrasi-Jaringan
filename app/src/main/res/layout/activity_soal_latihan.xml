<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluebg"
    tools:context=".Soal.SoalLatihanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSoalLatihan"
        android:layout_marginVertical="-5dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/toolbarSoalLatihan"
        app:cardCornerRadius="8dp"
        android:layout_marginVertical="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/soalNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_weight="5"
                android:paddingTop="12dp"
                android:text="hahahah aha hahahah ahahah ahah ah ahah ahahah ahahaha haha ha haha"
                android:textAlignment="gravity"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginHorizontal="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardJawaban1"
                    app:cardCornerRadius="6dp"
                    android:layout_marginVertical="12dp"
                    android:backgroundTint="@color/blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/jawaban1"
                        android:text="A. ini adalah jawaban 1"
                        android:padding="12dp"
                        android:layout_marginStart="6dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardJawaban2"
                    app:cardCornerRadius="6dp"
                    android:backgroundTint="@color/blue"
                    android:layout_marginVertical="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/jawaban2"
                        android:text="B. ini adalah jawaban 2"
                        android:layout_marginStart="6dp"
                        android:padding="12dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardJawaban3"
                    app:cardCornerRadius="6dp"
                    android:backgroundTint="@color/blue"
                    android:layout_marginVertical="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/jawaban3"
                        android:text="C. ini adalah jawaban 3"
                        android:layout_marginStart="6dp"
                        android:padding="12dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardJawaban4"
                    app:cardCornerRadius="6dp"
                    android:backgroundTint="@color/blue"
                    android:layout_marginVertical="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/jawaban4"
                        android:text="D. ini adalah jawaban 4"
                        android:layout_marginStart="6dp"
                        android:padding="12dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardNext"
                app:cardCornerRadius="6dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/blue"
                android:layout_marginVertical="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:padding="12dp"
                    android:text="Next"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5">
                <androidx.cardview.widget.CardView
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="6dp"
                    android:backgroundTint="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="36dp"
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skor"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/skor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/skor"
                                android:text="/100"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>