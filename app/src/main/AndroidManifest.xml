<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.aplikasibelajar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".IntroLogin.RegisterActivity" android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity android:name=".IntroLogin.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Soal.ResultSoalActivity" />
        <activity android:name=".RPP.RppReadActivity" android:configChanges="orientation|screenSize"/>
        <activity android:name=".RPP.RppActivity" />
        <activity android:name=".Materi.MateriReadActivity" android:configChanges="orientation|screenSize"/>
        <activity android:name=".Jobsheet.JobsheetReadActivity" android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".Video.PlayVideoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout" />
        <activity android:name=".Soal.SoalLatihanActivity" />
        <activity
            android:name=".Soal.SoalActivity"
            android:screenOrientation="fullSensor" />
        <activity android:name=".Silabus.SilabusActivity" android:configChanges="orientation|screenSize"/>
        <activity android:name=".Video.VideoActivity" />
        <activity android:name=".Jobsheet.JobsheetActivity" />
        <activity android:name=".Materi.MateriActivity" />
        <activity android:name=".About.AboutActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>